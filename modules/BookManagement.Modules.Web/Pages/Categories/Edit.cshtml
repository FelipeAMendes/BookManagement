@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Category</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryModel.Name" class="control-label"></label>
                <input asp-for="CategoryModel.Name" class="form-control"/>
                <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryModel.Description" class="control-label"></label>
                <input asp-for="CategoryModel.Description" class="form-control"/>
                <span asp-validation-for="CategoryModel.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CategoryModel.Id"/>
            <div class="form-group">
                <label asp-for="CategoryModel.ParentCategoryId" class="control-label"></label>
                <select asp-for="CategoryModel.ParentCategoryId" asp-items="@Model.CategoriesSelectList" class="form-control"></select>
                <span asp-validation-for="CategoryModel.ParentCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
